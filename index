  <div class="cart-toggle" id="cartToggle" title="Open cart" onclick="toggleCart()">Cart (<span id="cartCount">0</span>)</div>
  <div class="panel" id="cartPanel">
    <h3>Your cart</h3>
    <div class="items" id="cartItems"></div>
    <div class="foot">
      <div><strong>Total:</strong> $<span id="cartTotal">0.00</span></div>
      <div><button class="btn" onclick="checkout()">Checkout</button></div>
    </div>
  </div>

  <script>
    document.getElementById('year').textContent = new Date().getFullYear();

    const products = [
      {id:1,title:'A4 Art Print',price:14.99,desc:'High-quality giclée print on matte paper.'},
      {id:2,title:'Poster 18x24',price:22.00,desc:'Large format poster, vivid colors.'},
      {id:3,title:'Crewneck Hoodie',price:48.50,desc:'Soft heavyweight hoodie with print.'},
      {id:4,title:'Sticker Pack (10)',price:9.99,desc:'Durable vinyl stickers.'}
    ];

    const state = {cart:{}};

    function format(n){return Number(n).toFixed(2)}

    function renderProducts(){
      const grid = document.getElementById('productGrid');
      grid.innerHTML = '';
      products.forEach(p=>{
        const card = document.createElement('div');card.className='card';
        card.innerHTML = `
          <div class="thumb">${p.title}</div>
          <div class="meta">
            <div style="display:flex;justify-content:space-between;align-items:center"><div style="font-weight:700">${p.title}</div><div class="price">$${format(p.price)}</div></div>
            <div class="muted" style="margin-top:8px">${p.desc}</div>
          </div>
          <div style="display:flex;gap:10px">
            <button class="btn" onclick='addToCart(${p.id})'>Add</button>
            <button style="padding:10px;border-radius:8px;border:1px solid #eee;background:#fff" onclick='openQuick(${p.id})'>Quick view</button>
          </div>
        `;
        grid.appendChild(card);
      })
    }

    function addToCart(id){
      const p = products.find(x=>x.id===id);
      if(!p) return;
      state.cart[id] = (state.cart[id]||0)+1;
      refreshCartUI();
    }

    function refreshCartUI(){
      const items = document.getElementById('cartItems');
      items.innerHTML='';
      let total=0,count=0;
      for(const idStr in state.cart){
        const id = Number(idStr);const qty = state.cart[id];
        const p = products.find(x=>x.id===id);
        if(!p) continue;
        total += p.price*qty;count += qty;
        const el = document.createElement('div');el.style.display='flex';el.style.justifyContent='space-between';el.style.padding='8px 0';
        el.innerHTML = `<div>${p.title} <span class='muted'>x${qty}</span></div><div>$${format(p.price*qty)}</div>`;
        items.appendChild(el);
      }
      document.getElementById('cartTotal').textContent = format(total);
      document.getElementById('cartCount').textContent = count;
      if(count===0){items.innerHTML='<div class="muted" style="padding:12px">Cart is empty</div>'}
    }

    function toggleCart(){document.getElementById('cartPanel').classList.toggle('open')}

    function openQuick(id){
      const p = products.find(x=>x.id===id);
      if(!p) return;alert(p.title+" — $"+format(p.price)+"\n\n"+p.desc);
    }

    function checkout(){
      const entries = Object.entries(state.cart);
      if(entries.length===0){alert('Cart is empty');return}
      // Simple checkout: prepare order summary and open mail client
      let body = 'Order%20from%20Custom%20Prints%0A%0A';
      let total = 0;
      entries.forEach(([id,qty])=>{const p=products.find(x=>x.id==id);body += encodeURIComponent(p.title + ' x' + qty + ' — $' + format(p.price*qty) + '\n'); total += p.price*qty});
      body += encodeURIComponent('\nTotal: $' + format(total) + '\n\nPlease reply with shipping details.');
      window.location = 'mailto:orders@customprints.example?subject=New%20Order&body=' + body;
    }

    function submitContact(e){
      e.preventDefault();
      const f = e.target; const name = f.name.value; const email = f.email.value; const msg = f.message.value;
      // No backend in this template — open mail client prefilled
      const subject = encodeURIComponent('Contact from ' + name);
      const body = encodeURIComponent('Name: ' + name + '\nEmail: ' + email + '\n\n' + msg);
      window.location = 'mailto:hello@customprints.example?subject=' + subject + '&body=' + body;
    }

    renderProducts();refreshCartUI();
  </script>
</body>
